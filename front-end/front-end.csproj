<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <RootNamespace>front_end</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <Target Name="BuildKotlinLib" BeforeTargets="Build">
    <Exec Command="../build-klib.sh" />
  </Target>

  <ItemGroup>
    <Content Include="..\back-end\lib\build\bin\native\releaseShared\libbackend.so">
      <Link>libbackend.so</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
